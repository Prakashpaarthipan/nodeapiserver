{
  "name": "nodeapiserver",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www & npx tailwindcss -i ./src/tailwind.css -o ./public/stylesheets/tailwind.css",
    "dev": "nodemon ./bin/www",
    "buildcss": "tailwindcss build -i ./src/tailwind.css -o ./public/stylesheets/tailwind.css --watch",
    "develop": "concurrently \"npm run buildcss\"  \"npm run dev\""
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "concurrently": "^7.2.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.8",
    "event-stream": "^4.0.1",
    "express": "~4.16.1",
    "highlight.js": "^11.5.1",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "~1.9.1",
    "serve-static": "^1.15.0",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.24"
  },
  "nodemonConfig": {
    "ext": "js,html,json,ejs,css"
  }
}
